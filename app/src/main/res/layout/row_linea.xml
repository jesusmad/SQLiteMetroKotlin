<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cardViewLinea"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/linea_1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutLinea"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/ivNumLinea"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:background="@drawable/lbg"
            android:foreground="@drawable/l1"
            android:backgroundTint="@color/linea_1"/>

        <TextView
            android:id="@+id/tvLinea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:text="Linea 12"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2"
            android:layout_toRightOf="@+id/ivNumLinea"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="3dp">

            <TextView
                android:id="@+id/tvEstIni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinar de Chamartin"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/seprarador"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvEstFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valdecarros"
                android:textSize="17sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>